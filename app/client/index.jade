doctype html
html(ng-app="addressBook")
    head
        title JS-Course
        script(src="framework.js")
        script(src="scripts.js")
        link(rel="stylesheet" href="bootstrap.css")
    body
        div(ng-controller="mainCtrl" class="container text-center")
            div(class="row")
                table(class="table" id="rpCtrl")
                    tr
                        th(class="text-center") State
                        th(class="text-center") City
                        th(class="text-center") Street
                        th
                    tr(ng-repeat="item in data")
                        td(ng-bind="item.state")
                        td(ng-bind="item.city")
                        td(ng-bind="item.street")
                        td(align="center")
                            button(ng-click="delete(item._id)" type="button" class="btn btn-danger btn-xs") Delete
            div(class="row")
                div(ng-repeat="pageNumber in pages" class="col-md-1")
                    button(ng-click="get(pageNumber)" ng-bind="pageNumber" type="button" class="btn btn-success")
            div(class="row")            
                div(class="form-inline" role="form")
                    div(class="form-group")
                        input(type="text" class="form-control" id="state" placeholder="Enter state")
                    div(class="form-group")
                        input(type="text" class="form-control" id="city" placeholder="Enter city")
                    div(class="form-group")
                        input(type="text" class="form-control" id="street" placeholder="Enter street")
                    button(ng-click="post()" type="submit" class="btn btn-default") Submit
